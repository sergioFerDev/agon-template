extends ../layouts/master.pug

block title
  title Agon - Multipurpose Agency HTML Template

block header
  include ../components/header.pug

block content
  section.section-box
    .bg-2-opacity-80
      .box-login
        .row
          .col-xxl-7.col-xl-6.col-lg-6.col-md-12.login-left.pl-0.d-none.d-lg-flex
            img.img-responsive(src='assets/imgs/page/login/img-1.png', alt='Agon')
          .col-xxl-5.col-xl-6.col-lg-6.col-md-12.login-right.pr-0
            .box-login-form
              .box-signup.mt-90
                h1.text-heading-3.mb-40.text-center Welcome back.
                a.btn.btn-login-google.color-gray-500.text-heading-6.box-shadow-2(href='#')
                  img.img-responsive.img-middle.mr-10(src='assets/imgs/template/icons/Icon-gg-login.svg', alt='Agon')
                  |  Sign in with Google
                .text-center
                  .mt-40.box-line-throught.mb-40
                    span.text-body-text.color-gray-500 Or, sign in with your email
                .box-form-signup
                  .form-group
                    input.form-control(type='text', placeholder='Your email *', value='martin@company.com')
                    a.link-edit.text-body-text(href='#') Edit
                  .form-group
                    .form-field
                      span.text-body-small.color-green-900.tag-top Password
                      input.form-control.input-green-bd.input-with-icon(type='text', placeholder='')
                      span.icon-eye-right
                  .form-group
                    a.text-body-text(href='page-reset.html') Forgot password?
                  .form-group
                    button.btn.btn-green-full.text-heading-6 Continue
                  div
                    span.text-body-text.color-gray-500 Don&rsquo;t have an account?
                    a.text-body-text.color-green-900(href='page-signup.html') Sign up
