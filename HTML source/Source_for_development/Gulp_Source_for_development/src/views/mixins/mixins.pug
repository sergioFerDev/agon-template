mixin ProductCardGrid(img='assets/imgs/page/homepage5/sp4.png', cat='Sony', name='4K TV Game Mini Arcade Rocker Console 32GB/64GB', rateNumber='84', price='$22.51', oldPrice='$28.89')
    .col-xl-3.col-lg-4.col-md-6.col-sm-6.col-12
        .product-item-2.hover-up
            a(href='page-shop-single.html')
                .product-image
                    img(src= img alt='agon')
            .box-quick-view
                .quick-view
                    a.like-product(href='#')
                    a.shuffle-product(href='#')
                    a.view-product(href='#')
            .product-info
                span.text-body-small.color-gray-500.font-bold= cat
                a(href='page-shop-single.html')
                    h3.text-body-lead.color-gray-900= name
                .rating.mt-10
                    .box-rating
                        span
                        img(src='assets/imgs/page/homepage5/star-active.svg' alt='agon')
                        span
                        img(src='assets/imgs/page/homepage5/star-active.svg' alt='agon')
                        span
                        img(src='assets/imgs/page/homepage5/star-active.svg' alt='agon')
                        span
                        img(src='assets/imgs/page/homepage5/star-active.svg' alt='agon')
                        span
                        img(src='assets/imgs/page/homepage5/star.svg' alt='agon')
                    span.text-semibold
                        span (
                        span= rateNumber 
                        span &nbsp;rates )
                .d-flex.mt-20
                    .box-prices
                        span.price-regular.mr-5= price
                        span.price-regular.price-line= oldPrice
                    .button-add.text-end
                        a.btn.btn-cart(href='#') Add

